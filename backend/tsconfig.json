{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": "..",  // ðŸ”¥ Allows importing from ../src
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": ["server.ts", "../src/app/api/wrestlers.ts"],  // ðŸ”¥ Ensure TypeScript includes the `wrestlers.ts` file
  "exclude": ["node_modules", "dist"]
}
