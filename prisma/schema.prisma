// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model League {
  id          String   @id @default(cuid())
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  status      String   @default("setup")
  maxEntrants Int      @default(30)
  
  creatorName  String
  creatorEmail String?
  
  isPublic     Boolean  @default(true)
  accessCode   String?
  
  participants Participant[]
  entrants     Entrant[]
  events       Event[]
  
  @@map("leagues")
}

model Participant {
  id         String   @id @default(cuid())
  name       String
  email      String?
  entryCount Int
  totalPaid  Decimal? @default(0)
  joinedAt   DateTime @default(now())
  
  leagueId String
  league   League @relation(fields: [leagueId], references: [id], onDelete: Cascade)
  
  entrants Entrant[]
  
  @@unique([leagueId, name])
  @@map("participants")
}

model Entrant {
  id           String    @id @default(cuid())
  number       Int
  wrestlerName String    @default("TBD")
  status       String    @default("Active")
  eliminatedAt DateTime?
  eliminatedBy String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  
  leagueId String
  league   League @relation(fields: [leagueId], references: [id], onDelete: Cascade)
  
  participantId String
  participant   Participant @relation(fields: [participantId], references: [id], onDelete: Cascade)
  
  @@unique([leagueId, number])
  @@map("entrants")
}

model Event {
  id          String   @id @default(cuid())
  type        String
  title       String
  description String?
  data        Json?
  timestamp   DateTime @default(now())
  
  leagueId String
  league   League @relation(fields: [leagueId], references: [id], onDelete: Cascade)
  
  @@map("events")
}